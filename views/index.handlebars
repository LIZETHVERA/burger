<h1>BUUUGERRS!</h1>

<h2>Devoured Burger!</h2>

<ul>
  {{#each burgers}}
    {{#unless waiting}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Wating to eat</h2>

<ul>
  {{#each burgers}}
    {{#if waiting}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="burger_name" value="1">
  </div>

  <div class="form-group">
    <label for="waiting">Eat?</label><br>
    <input type="radio" name="waiting" value="1" checked Eaten!<br>
    <input type="radio" name="waiting" value="0"> Waiting
  </div>

  <button type="submit">Add Burger</button>
</form>
